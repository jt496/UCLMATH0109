{
    "name": "Debian",
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    "onCreateCommand": ".devcontainer/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "leanprover.lean4"              // Lean 4 extension
            ]
        }
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "PATH" : "${containerEnv:PATH}:/home/vscode/.elan/bin:/home/vscode/.local/bin"
    }
}